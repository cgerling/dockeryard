#!/bin/bash

source "$(dirname $0)/default_values"

IFS=':' read -ra ARG_VALUES <<< "$1"

IMAGE=${ARG_VALUES[0]}
VERSION=${ARG_VALUES[1]}

BASE_PATH="./images/$IMAGE"

source "$BASE_PATH/meta.sh"
if [[ -z $VERSION ]]; then
  VERSION=$CURRENT_VERSION
fi

if [[ -z $VERSION ]]; then
  VERSION="latest"
fi

shift

TAG="$REGISTRY/$REPOSITORY/$IMAGE:$VERSION"
CMD_ARGS=$@

